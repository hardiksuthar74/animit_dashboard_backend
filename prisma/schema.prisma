generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model anime {
  id          Int           @id @default(autoincrement())
  title       String?
  synopsis    String?       @db.Text
  season      String?
  year        Int?
  episodes    Int?
  image       String?
  status      String?
  type        String?
  score       Int?
  popular     Int?
  favorites   Int?
  animeGenres animeGenres[]
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique(map: "User_email_key")
  name      String?
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model spotlight {
  id         Int    @id @default(autoincrement())
  coverImage String
  rank       Int
  type       String
  date       String
  synopsis   String @db.Text
}

model genres {
  id          Int           @id @default(autoincrement())
  genres      String
  animeGenres animeGenres[]
}

model animeGenres {
  id       Int     @id @default(autoincrement())
  genres   genres? @relation(fields: [genresId], references: [id])
  genresId Int?
  anime    anime?  @relation(fields: [animeId], references: [id])
  animeId  Int?
}
