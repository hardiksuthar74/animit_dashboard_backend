generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model anime {
  id        Int     @id @default(autoincrement())
  title     String?
  synopsis  String? @db.Text
  season    String?
  year      Int?
  episodes  Int?
  image     String?
  status    String?
  type      String?
  score     Int?
  popular   Int?
  favorites Int?
  cover     cover[]
  genre     genre[]
}

model cover {
  id      Int    @id @default(autoincrement())
  animeId Int?
  anime   anime? @relation(fields: [animeId], references: [id], map: "Cover_animeId_fkey")

  @@index([animeId], map: "Cover_animeId_fkey")
}

model genre {
  id      Int    @id @default(autoincrement())
  name    String @unique(map: "Genre_name_key")
  animeId Int?
  anime   anime? @relation(fields: [animeId], references: [id], map: "Genre_animeId_fkey")

  @@index([animeId], map: "Genre_animeId_fkey")
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique(map: "User_email_key")
  name      String?
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime
}
