generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model anime {
  id          Int           @id @default(autoincrement())
  title       String?
  synopsis    String?       @db.Text
  season      String?
  year        Int?
  episodes    Int?
  image       String?
  status      String?
  type        String?
  score       Int?
  popular     Int?
  favorites   Int?
  animegenres animegenres[]
}

model user {
  id        Int       @id @default(autoincrement())
  email     String    @unique(map: "User_email_key")
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  process   process[]
}

model spotlight {
  id         Int    @id @default(autoincrement())
  coverImage String
  rank       Int
  type       String
  date       String
  synopsis   String @db.Text
}

model genres {
  id          Int           @id @default(autoincrement())
  genres      String
  animegenres animegenres[]
}

model animegenres {
  id       Int     @id @default(autoincrement())
  genresId Int?
  animeId  Int?
  anime    anime?  @relation(fields: [animeId], references: [id], map: "animeGenres_animeId_fkey")
  genres   genres? @relation(fields: [genresId], references: [id], map: "animeGenres_genresId_fkey")

  @@index([animeId], map: "animeGenres_animeId_fkey")
  @@index([genresId], map: "animeGenres_genresId_fkey")
}

model process {
  id       Int   @id @default(autoincrement())
  animeId  Int?
  userId   Int?
  process  Int   @default(0)
  episodes Int   @default(0)
  user     user? @relation(fields: [userId], references: [id], map: "Process_userId_fkey")

  @@index([userId], map: "Process_userId_fkey")
}
