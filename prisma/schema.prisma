generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model anime {
  id        Int     @id @default(autoincrement())
  title     String?
  synopsis  String? @db.Text
  season    String?
  year      Int?
  episodes  Int?
  image     String?
  status    String?
  type      String?
  score     Int?
  popular   Int?
  favorites Int?
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique(map: "User_email_key")
  name      String?
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
